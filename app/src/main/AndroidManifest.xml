<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TiendaApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".view.UserLocationView"
            android:exported="false" />
        <activity
            android:name=".view.AddUserView"
            android:exported="false" />
        <activity
            android:name=".view.AddTicketView"
            android:exported="false" />
        <activity
            android:name=".view.TicketsView"
            android:exported="false" />
        <activity
            android:name=".view.AddCategoryView"
            android:exported="false" />
        <activity
            android:name=".view.ProductsView"
            android:exported="false" />
        <activity
            android:name=".view.CategoryView"
            android:exported="false" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.UsersView" />

        <meta-data
            android:name="com.mapbox.common.module.telemetry"
            android:value="false" />
    </application>

</manifest>